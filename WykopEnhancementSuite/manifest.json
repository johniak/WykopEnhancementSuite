{
    "manifest_version": 2,

    "name": "Wykop Enhancement Suite",
    "description": "Dodatek to portalu wykop, rozszerzający działanie czarnolisty. Oraz oferujący kilka ciekawych funkcji.",
    "version": "0.2.1",
    "short_name":"WES",
    "icons": {
        "128": "img/icon.png"
    },

    "permissions": [
        "webNavigation",
        "https://www.wykop.pl/",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [ "https://www.wykop.pl/*", "http://www.wykop.pl/*" ],
            "run_at": "document_start",
            "js": [ "js/jquery-1.10.1.min.js", "ts/blacklist.js" ]
        }
    ],
    "browser_action": {
        "default_icon": "img/icon.png"
    },
    "web_accessible_resources": [
        "ts/blacklist.js.map",
        "css/chrome_shared.css",
        "css/widgets.css",
        "css/colored_nicks.css"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": [ "ts/SettingManager.js", "ts/background.js" ]
    }
}